---
import EducationItem from "@/components/EducationItem.astro";
import { education } from "@cv";

const EDUCATION = education;
const title = "Education";
---

<h3 class="text-4xl font-bold text-primary-100 pb-6">{title.toUpperCase()}</h3>
<ol
  class="relative mt-16 grid lg:gap-x-24 sm:gap-y-16 grid-cols-1 lg:grid-cols-2"
>
  {
    EDUCATION.map((education) => (
      <li class="flex">
        <EducationItem {...education} />
      </li>
    ))
  }
</ol>
